                       </ul>
                  </li>

               </ul>
            </div>
         </div>
         <!-- /MAIN AREA -->
         <!-- WEATHER FORECAST -->
         <div class="forecast" id="forecast" style="display:none">
           <div class="row week-forecast">
             <div class="col-xs-3 col-1">
               <div class="title">
                 <i class="fa fa-chevron-down green-600 font-size-20 margin-right-5"></i>
                 <span class="font-size-30"><%= tempLow %></span>
                 <span class="font-size-24">C</span>
               </div>
               <div class="font-size-14">LOW</div>
              </div>
              <div class="col-xs-3 col-2">
                <div class="title">
                  <i class="fa fa-chevron-up red-600 font-size-20 margin-right-5"></i>
                  <span class="font-size-30"><%= tempHigh %></span>
                  <span class="font-size-24">C</span>
                </div>
                <div class="font-size-14">HIGH</div>
               </div>
               <div class="col-xs-3 col-3">
                 <div class="title">
                   <img src="https://png.icons8.com/sunrise/win8/26" title="Sunrise" width="26" height="26">
                   <span class="font-size-30"><%= sunrise %></span>
                 </div>
                 <div class="font-size-14">SUNRISE</div>
                </div>
                <div class="col-xs-3 col-4">
                  <div class="title">
                    <img src="https://png.icons8.com/sunset/win8/26" title="Sunset" width="26" height="26">
                    <span class="font-size-30"><%= sunset %></span>
                  </div>
                  <div class="font-size-14">SUNSET</div>
                 </div>

           </div>
         </div>
