<% include ./partials/header %>

<div id="landing-header">
  <div class="row">
      <h1>Welcome to Weather App</h1>
      <div style="width: 30%; margin: 25px auto;">
          <form action="/" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="city" placeholder="city" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" onclick="myFunction()">Get Weather!</button>
            </div>
          </form>
            <div class="alert alert-success" style="display:none" id="grn_alert">
              <p><strong><%= weather %></strong></p>
            </div>
    </div>
  </div>
</div>

<div class="widget-block" id="widget-block" style="display:none">
  <div class="widget-area">
    <h5 class="location">
      <div class="location-info">
        <i class="fa fa-map-marker"></i>
        <%= city %>, <%= country %>
      </div>
    </h5>
    <p class="today"><%= time %></p>
    <div class="weather-desc">
      <span><div style="text-transform:capitalize"><%= currWeather %></div></span>
    </div>
    <ul class="weather-block-info">
                  <li id="outer-block">
                       <p class="temperature"><%= currTemp %><span class="font-size-30">C</span></p>
                       <!-- <span class="temperature-feels">+20 feels</span></p> -->
                  </li>
                  <li id="outer-block">
                    <% if(code >= 200 && code <= 232) { %>
                      <div class="icon thunder-storm">
                        <div class="cloud"></div>
                        <div class="lightning">
                        <div class="bolt"></div>
                        <div class="bolt"></div>
                        </div>
                      </div>
                    <% } %>

                    <% if(code >= 300 && code <= 321) { %>
                      <div class="icon rainy">
                        <div class="cloud"></div>
                        <div class="rain"></div>
                      </div>
                    <% } %>

                    <% if(code >= 500 && code <= 531) { %>
                      <div class="icon rainy">
                        <div class="cloud"></div>
                        <div class="rain"></div>
                      </div>
                    <% } %>

                    <% if(code >= 600 && code <= 622) { %>
                      <div class="icon flurries">
                        <div class="cloud"></div>
                        <div class="snow">
                          <div class="flake"></div>
                          <div class="flake"></div>
                        </div>
                      </div>
                    <% } %>

                    <% if(code >= 701 && code <= 781) { %>
                      <div class="icon sun-shower">
                        <div class="cloud"></div>
                        <div class="sun">
                          <div class="rays"></div>
                        </div>
                        <div class="rain"></div>
                      </div>
                    <% } %>

                    <% if(code == 800) { %>
                      <div class="icon cloudy">
                        <div class="cloud"></div>
                        <div class="cloud"></div>
                      </div>
                    <% } %>

                    <% if(code >= 801 && code <= 804) { %>
                      <div class="icon cloudy">
                        <div class="cloud"></div>
                        <div class="cloud"></div>
                      </div>
                    <% } %>

                    <% if(code >= 900 && code <= 906) { %>
                      <div class="icon sun-shower">
                        <div class="cloud"></div>
                        <div class="sun">
                          <div class="rays"></div>
                        </div>
                        <div class="rain"></div>
                      </div>
                    <% } %>

                  </li>
                  <li id="outer-block">
                     <ul class="weather-params">
                        <li id="inner-block"><i class="climacon thermometer medium-high"></i> <span><%= currPressure %> hPa</span></li>
                        <li id="inner-block"><i class="climacon moon full"></i> <span><%= currHumid %>% humidity</span></li>
                        <li id="inner-block"><i class="climacon wind"></i> <span><%= currWind %>mph <%= windShort %></span></li>
                     </ul>
                  </li>
                  <li id="outer-block">
                     <ul class="weather-params">
                        <li id="inner-block"><i class="climacon umbrella"></i> <span> <%= currCloud %>%</span></li>
                        <li id="inner-block"><i class="climacon compass"></i> <span><%= currDegree %></span></li>
                        <li id="inner-block">
                          <!-- <i class="climacon shades"></i> -->
